// jsconfig.json

{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      //Assuming your components/utilities live in ./src
      //Update this path as necessary
      "~components/*": ["./src/components/*"],
      "~modules/*": ["./src/modules/*"],
      "~utils/*": ["./src/utils/*"],
      "~assets/*": ["./src/assets/*"],
      "~svg/*": ["./src/svg/*"]
    }
  },
  //Add any build/compiled folders here to stop vscode searching those
  "exclude": ["node_modules", "build"]
}
